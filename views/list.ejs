<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>  <!-- This "<..> are ejs tags.value for kindOfDay will be generated in app.js -->
    </div>

    <div class="box">
        
            <%for(var i = 0;i < newListItems.length;i++){%>
                <div class="item">   <!-- each item will be placed in a div -->
                    <input type="checkbox">  <!-- Instead of bullets we'll have check box -->
                    <p><%= newListItems[i] %></p>
                </div>
                
            <% } %>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%=listTitle%>>+</button>
            </form>
        
    </div>

<%- include("footer") -%>

   


